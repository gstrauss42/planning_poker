        state.version = serverState.version || 0;
        state.lastUpdated = serverState.last_updated || Date.now();
        state.sessionHealth = serverState.session_health || 100;
        
        console.log(`[Sync] Updated client state:`, state);
        
        // Update UI
        renderAll();
        
        // Show appropriate status message
        if (changeAction && state.version > 0) {
          showStatusForAction(changeAction);
        }
        
        console.log(`[Sync] State updated successfully to version ${state.version}`);
        
      } catch (error) {
        console.error(`[Sync] Error updating state: ${error.message}`);
        // Rollback to previous state
        Object.assign(state, previousState);
        renderAll();
        showStatus("State update failed. Please refresh.", true);
      }
    }

