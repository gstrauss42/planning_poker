<!DOCTYPE html>
<html>
<head>
  <title>Planning Poker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background: #f5f5f5;
      padding: 20px;
    }
    .container {
      max-width: 1000px;
      margin: 0 auto;
      background: white;
      padding: 40px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    h1 {
      margin: 0 0 30px 0;
      color: #333;
    }
    .connection-status {
      position: absolute;
      top: 10px;
      right: 10px;
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 12px;
      background: #f5f5f5;
      border-radius: 20px;
      font-size: 13px;
      color: #666;
    }
    .connection-indicator {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: #ffc107;
      animation: pulse 2s infinite;
    }
    .connection-indicator.connected {
      background: #4CAF50;
      animation: none;
    }
    .connection-indicator.disconnected {
      background: #f44336;
      animation: blink 1s infinite;
    }
    @keyframes pulse {
      0% { opacity: 1; }
      50% { opacity: 0.5; }
      100% { opacity: 1; }
    }
    @keyframes blink {
      0% { opacity: 1; }
      50% { opacity: 0.3; }
      100% { opacity: 1; }
    }
    .presence-badge {
      font-size: 16px;
      font-weight: 500;
      color: #2196F3;
      background: #e3f2fd;
      padding: 8px 16px;
      border-radius: 20px;
      border: 2px solid #2196F3;
      transition: all 0.3s ease;
    }
    .presence-badge.all-voted {
      color: #4CAF50;
      background: #e8f5e9;
      border-color: #4CAF50;
    }
    .ticket-section {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #eee;
    }
    .jira-input-group {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }
    .ticket-display {
      background: #e3f2fd;
      border-radius: 8px;
      padding: 20px;
      margin-top: 15px;
      min-height: 100px;
    }
    .ticket-display.empty {
      text-align: center;
      color: #999;
      font-style: italic;
      padding: 40px;
    }
    .ticket-header {
      display: flex;
      justify-content: space-between;
      align-items: start;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #2196F3;
    }
    .ticket-title {
      font-size: 24px;
      font-weight: 600;
      color: #2196F3;
      flex: 1;
    }
    .ticket-meta {
      display: flex;
      gap: 20px;
      font-size: 14px;
      color: #666;
      margin-top: 8px;
    }
    .ticket-meta-item {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    .ticket-meta-label {
      font-weight: 600;
    }
    .ticket-content {
      margin-top: 20px;
    }
    .ticket-section-block {
      margin-bottom: 25px;
    }
    .section-header {
      font-size: 16px;
      font-weight: 600;
      color: #333;
      margin-bottom: 10px;
      padding-bottom: 5px;
      border-bottom: 1px solid #ddd;
    }
    .section-content {
      color: #555;
      line-height: 1.6;
      font-size: 15px;
    }
    .section-content h1, .section-content h2, .section-content h3 {
      margin-top: 16px;
      margin-bottom: 8px;
      font-weight: 600;
      color: #333;
    }
    .section-content p {
      margin-bottom: 12px;
    }
    .section-content ul, .section-content ol {
      margin: 12px 0;
      padding-left: 28px;
    }
    .section-content code {
      background: #f5f5f5;
      padding: 2px 6px;
      border-radius: 3px;
      font-family: monospace;
      font-size: 14px;
    }
    .collapsible-section {
      border: 1px solid #ddd;
      border-radius: 6px;
      overflow: hidden;
    }
    .collapsible-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 15px;
      background: #f9f9f9;
      cursor: pointer;
      user-select: none;
    }
    .collapse-icon {
      font-size: 18px;
      color: #666;
      transition: transform 0.3s;
    }
    .collapse-icon.expanded {
      transform: rotate(180deg);
    }
    .collapsible-content {
      padding: 15px;
      background: white;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out;
    }
    .collapsible-content.expanded {
      max-height: 2000px;
    }
    .input-section {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }
    input, select, button {
      padding: 12px 16px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
      font-family: inherit;
    }
    input {
      flex: 1;
      min-width: 150px;
    }
    select {
      min-width: 120px;
      background: white;
      cursor: pointer;
    }
    button {
      background: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: 500;
      transition: background 0.2s;
    }
    button:hover:not(:disabled) {
      background: #45a049;
    }
    button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }
    .controls {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
    }
    .controls button {
      flex: 1;
    }
    button.reveal {
      background: #2196F3;
    }
    button.reveal:hover:not(:disabled) {
      background: #0b7dda;
    }
    button.clear {
      background: #f44336;
    }
    button.clear:hover:not(:disabled) {
      background: #da190b;
    }
    button.fetch-jira {
      background: #0052CC;
      min-width: 140px;
    }
    button.fetch-jira:hover:not(:disabled) {
      background: #0747A6;
    }
    .participants {
      margin-top: 20px;
      min-height: 100px;
    }
    .participants h2 {
      font-size: 18px;
      color: #666;
      margin-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .participant {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 16px;
      margin: 8px 0;
      background: #f9f9f9;
      border-radius: 4px;
      border-left: 4px solid #4CAF50;
    }
    .participant-name {
      font-weight: 500;
      color: #333;
    }
    .participant-status {
      color: #4CAF50;
      font-size: 14px;
    }
    .points {
      background: #4CAF50;
      color: white;
      padding: 6px 16px;
      border-radius: 16px;
      font-weight: bold;
      font-size: 16px;
    }
    .empty-state {
      text-align: center;
      padding: 40px;
      color: #999;
    }
    .status-indicator {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background: #4CAF50;
      color: white;
      border-radius: 20px;
      font-size: 14px;
      opacity: 0;
      transition: opacity 0.3s;
      pointer-events: none;
      z-index: 1000;
    }
    .status-indicator.show {
      opacity: 1;
    }
    .status-indicator.error {
      background: #f44336;
    }
    .version-indicator {
      position: fixed;
      bottom: 10px;
      right: 10px;
      padding: 5px 10px;
      background: rgba(0, 0, 0, 0.7);
      color: white;
      font-size: 11px;
      font-family: monospace;
      border-radius: 3px;
    }
  </style>
</head>
<body>
  <div class="status-indicator" id="statusIndicator">Connected</div>
  <div class="connection-status">
    <div class="connection-indicator" id="connectionIndicator"></div>
    <span id="connectionText">Connecting...</span>
  </div>
  
  <div class="version-indicator" id="versionIndicator">v0</div>
  
  <div class="container">
    <h1>DataBaes Estimations</h1>

    <div class="ticket-section">
      <div class="jira-input-group">
        <input type="text" id="jiraTicket" placeholder="Enter JIRA ticket key (e.g., PROJ-123) or URL" />
        <button id="fetchJiraBtn" class="fetch-jira">Fetch from JIRA</button>
      </div>
      
      <div class="ticket-display empty" id="ticketDisplay">
        <span>No ticket loaded - Enter a JIRA ticket to begin</span>
      </div>
    </div>

    <div class="input-section">
      <input type="text" id="userName" placeholder="Enter your name" />
      <select id="storyPoints">
        <option value="">Select points</option>
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="5">5</option>
        <option value="8">8</option>
        <option value="13">13</option>
        <option value="21">21</option>
        <option value="?">?</option>
      </select>
      <button id="submitBtn">Vote</button>
    </div>

    <div class="controls">
      <button id="revealBtn" class="reveal">Reveal</button>
      <button id="clearBtn" class="clear">Clear Votes</button>
    </div>

    <div class="participants">
      <h2>
        Participants
        <span class="presence-badge" id="presenceBadge">0/0 voted</span>
      </h2>
      <div id="participantsList"></div>
    </div>
  </div>

  <script type="module">
    import { createConsumer } from "@rails/actioncable"
    
    // Single global state object
    const state = {
      votes: {},
      revealed: false,
      ticketData: null,
      ticketId: null,
      connectedCount: 0,
      votedCount: 0,
      version: 0
    };
    
    let subscription = null;
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
    
    function updateConnectionStatus(connected, text = null) {
      const indicator = document.getElementById("connectionIndicator");
      const textEl = document.getElementById("connectionText");
      
      if (connected) {
        indicator.classList.add("connected");
        indicator.classList.remove("disconnected");
        textEl.textContent = text || "Connected";
      } else {
        indicator.classList.remove("connected");
        indicator.classList.add("disconnected");
        textEl.textContent = text || "Disconnected";
      }
    }

    function showStatus(message, isError = false) {
      console.log(`[Status] ${message}`);
      const indicator = document.getElementById("statusIndicator");
      indicator.textContent = message;
      indicator.classList.add("show");
      if (isError) {
        indicator.classList.add("error");
      } else {
        indicator.classList.remove("error");
      }
      setTimeout(() => {
        indicator.classList.remove("show");
        indicator.classList.remove("error");
      }, 3000);
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }
    
    // Single function to sync state from server
    function syncState(serverState) {
      console.log(`[Sync] Updating to version ${serverState.version} from ${state.version}`);
      
      // Update all state properties
      state.votes = serverState.votes || {};
      state.revealed = serverState.revealed || false;
      state.ticketData = serverState.ticket_data || null;
      state.ticketId = serverState.ticket_id || null;
      state.connectedCount = serverState.connected_count || 0;
      state.votedCount = serverState.voted_count || 0;
      state.version = serverState.version || 0;
      
      // Update UI
      renderAll();
      
      // Update version indicator
      document.getElementById("versionIndicator").textContent = `v${state.version}`;
    }

    function updatePresenceBadge() {
      const badge = document.getElementById("presenceBadge");
      badge.textContent = `${state.votedCount}/${state.connectedCount} voted`;
      
      if (state.connectedCount > 0 && state.votedCount === state.connectedCount) {
        badge.classList.add("all-voted");
      } else {
        badge.classList.remove("all-voted");
      }
    }

    function renderTicket() {
      const display = document.getElementById("ticketDisplay");
      
      if (!state.ticketData) {
        display.innerHTML = '<span>No ticket loaded - Enter a JIRA ticket to begin</span>';
        display.classList.add("empty");
        return;
      }

      display.classList.remove("empty");
      
      let html = `
        <div class="ticket-header">
          <div>
            <div class="ticket-title">${escapeHtml(state.ticketData.formatted_title || state.ticketData.key)}</div>
            <div class="ticket-meta">
              ${state.ticketData.status ? `
                <div class="ticket-meta-item">
                  <span class="ticket-meta-label">Status:</span>
                  <span>${escapeHtml(state.ticketData.status)}</span>
                </div>
              ` : ''}
              ${state.ticketData.priority ? `
                <div class="ticket-meta-item">
                  <span class="ticket-meta-label">Priority:</span>
                  <span>${escapeHtml(state.ticketData.priority)}</span>
                </div>
              ` : ''}
              ${state.ticketData.assignee ? `
                <div class="ticket-meta-item">
                  <span class="ticket-meta-label">Assignee:</span>
                  <span>${escapeHtml(state.ticketData.assignee)}</span>
                </div>
              ` : ''}
            </div>
          </div>
        </div>
        <div class="ticket-content">
      `;

      if (state.ticketData.description && state.ticketData.description.trim()) {
        html += `
          <div class="ticket-section-block">
            <div class="section-header">Description</div>
            <div class="section-content">${state.ticketData.description}</div>
          </div>
        `;
      }

      if (state.ticketData.acceptance_criteria && state.ticketData.acceptance_criteria.trim()) {
        html += `
          <div class="ticket-section-block">
            <div class="section-header">Acceptance Criteria</div>
            <div class="section-content">${state.ticketData.acceptance_criteria}</div>
          </div>
        `;
      }

      if (state.ticketData.technical_writeup && state.ticketData.technical_writeup.trim()) {
        html += `
          <div class="ticket-section-block">
            <div class="collapsible-section">
              <div class="collapsible-header" onclick="toggleTechnicalWriteup()">
                <div class="section-header">Technical Writeup</div>
                <span class="collapse-icon" id="techCollapseIcon">▼</span>
              </div>
              <div class="collapsible-content" id="technicalWriteupContent">
                <div class="section-content">${state.ticketData.technical_writeup}</div>
              </div>
            </div>
          </div>
        `;
      }

      html += '</div>';
      display.innerHTML = html;
    }

    window.toggleTechnicalWriteup = function() {
      const content = document.getElementById("technicalWriteupContent");
      const icon = document.getElementById("techCollapseIcon");
      
      if (content && icon) {
        if (content.classList.contains("expanded")) {
          content.classList.remove("expanded");
          icon.classList.remove("expanded");
        } else {
          content.classList.add("expanded");
          icon.classList.add("expanded");
        }
      }
    };

    function renderVotes() {
      const list = document.getElementById("participantsList");
      
      if (!state.votes || Object.keys(state.votes).length === 0) {
        list.innerHTML = '<div class="empty-state">No votes yet</div>';
        return;
      }

      list.innerHTML = Object.entries(state.votes)
        .map(([name, points]) => `
          <div class="participant">
            <span class="participant-name">${escapeHtml(name)}</span>
            ${state.revealed ? 
              `<span class="points">${escapeHtml(points)}</span>` : 
              `<span class="participant-status">✓ Voted</span>`
            }
          </div>
        `)
        .join('');
    }

    function renderAll() {
      renderTicket();
      renderVotes();
      updatePresenceBadge();
    }

    // WebSocket subscription
    const cable = createConsumer();
    
    function setupSubscription() {
      if (subscription) {
        subscription.unsubscribe();
      }
      
      subscription = cable.subscriptions.create(
        { channel: "EstimationChannel" },
        {
          connected() {
            console.log("[WebSocket] Connected");
            updateConnectionStatus(true);
            showStatus("Connected");
            
            // Start heartbeat
            this.heartbeatTimer = setInterval(() => {
              this.perform('heartbeat');
            }, 10000);
          },
          
          disconnected() {
            console.log("[WebSocket] Disconnected");
            updateConnectionStatus(false);
            
            if (this.heartbeatTimer) {
              clearInterval(this.heartbeatTimer);
            }
            
            // Reconnect after 2 seconds
            setTimeout(() => {
              updateConnectionStatus(false, "Reconnecting...");
              setupSubscription();
            }, 2000);
          },
          
          received(data) {
            console.log("[WebSocket] Received:", data);
            
            if (data.action === "sync_state") {
              // Full state sync - this is the ONLY way state updates
              syncState(data.state);
              
              // Don't show status for initial load
              if (state.version > 0) {
                // Determine what changed and show appropriate message
                if (state.ticketData && !data.state.ticket_data) {
                  showStatus("Ticket cleared");
                } else if (!state.ticketData && data.state.ticket_data) {
                  showStatus("Ticket loaded");
                } else if (state.revealed && !data.state.revealed) {
                  showStatus("Votes cleared");
                } else if (!state.revealed && data.state.revealed) {
                  showStatus("Votes revealed!");
                }
              }
              
            } else if (data.action === "presence_update") {
              // Only update presence counts
              state.connectedCount = data.connected_count || 0;
              state.votedCount = data.voted_count || 0;
              updatePresenceBadge();
            }
          }
        }
      );
    }

    // Event handlers
    document.getElementById("fetchJiraBtn").addEventListener("click", async () => {
      const jiraInput = document.getElementById("jiraTicket").value.trim();
      const btn = document.getElementById("fetchJiraBtn");

      if (!jiraInput) {
        alert("Please enter a JIRA ticket key or URL");
        return;
      }

      btn.disabled = true;
      btn.textContent = "Fetching...";

      try {
        const response = await fetch("/estimations/fetch_jira_ticket", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({ jira_input: jiraInput })
        });

        const result = await response.json();
        if (!response.ok) {
          throw new Error(result.error || "Failed to fetch ticket");
        }

        document.getElementById("jiraTicket").value = "";
        // State will update via broadcast
      } catch (error) {
        showStatus(error.message, true);
      } finally {
        btn.disabled = false;
        btn.textContent = "Fetch from JIRA";
      }
    });

    document.getElementById("submitBtn").addEventListener("click", async () => {
      const userName = document.getElementById("userName").value.trim();
      const points = document.getElementById("storyPoints").value;

      if (!userName || !points) {
        alert("Please enter your name and select points");
        return;
      }

      if (!state.ticketData) {
        alert("Please load a ticket before voting");
        return;
      }

      try {
        const response = await fetch("/estimations/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({ user_name: userName, points: points })
        });

        if (!response.ok) {
          throw new Error("Failed to submit vote");
        }

        document.getElementById("storyPoints").value = "";
        // State will update via broadcast
      } catch (error) {
        showStatus(error.message, true);
      }
    });

    document.getElementById("revealBtn").addEventListener("click", async () => {
      if (Object.keys(state.votes).length === 0) {
        alert("No votes to reveal");
        return;
      }

      try {
        const response = await fetch("/estimations/reveal", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          }
        });

        if (!response.ok) {
          throw new Error("Failed to reveal votes");
        }
        // State will update via broadcast
      } catch (error) {
        showStatus(error.message, true);
      }
    });

    document.getElementById("clearBtn").addEventListener("click", async () => {
      if (Object.keys(state.votes).length === 0) {
        alert("No votes to clear");
        return;
      }

      if (!confirm("Clear all votes?")) {
        return;
      }

      try {
        const response = await fetch("/estimations/clear", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          }
        });

        if (!response.ok) {
          throw new Error("Failed to clear votes");
        }
        // State will update via broadcast
      } catch (error) {
        showStatus(error.message, true);
      }
    });

    // Initialize
    function init() {
      console.log("[Init] Starting application");
      setupSubscription();
      renderAll();
    }

    init();
  </script>
</body>
</html>