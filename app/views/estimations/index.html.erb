<!DOCTYPE html>
<html>
<head>
  <title>Planning Poker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background: #f5f5f5;
      padding: 20px;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      padding: 40px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    h1 {
      margin: 0 0 30px 0;
      color: #333;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .ticket-section {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #eee;
    }
    .ticket-display {
      font-size: 20px;
      font-weight: 600;
      color: #2196F3;
      margin-bottom: 15px;
      padding: 15px;
      background: #e3f2fd;
      border-radius: 6px;
      min-height: 50px;
      display: flex;
      align-items: center;
    }
    .ticket-display.empty {
      color: #999;
      font-weight: 400;
      font-style: italic;
    }
    .ticket-input-group {
      display: flex;
      gap: 10px;
    }
    .input-section {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }
    input, select, button {
      padding: 12px 16px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
      font-family: inherit;
    }
    input {
      flex: 1;
      min-width: 150px;
    }
    input:focus, select:focus {
      outline: none;
      border-color: #4CAF50;
    }
    select {
      min-width: 120px;
      background: white;
      cursor: pointer;
    }
    button {
      background: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: 500;
      transition: background 0.2s;
    }
    button:hover {
      background: #45a049;
    }
    button:active {
      transform: scale(0.98);
    }
    button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }
    .controls {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
    }
    .controls button {
      flex: 1;
    }
    button.reveal {
      background: #2196F3;
    }
    button.reveal:hover {
      background: #0b7dda;
    }
    button.clear {
      background: #f44336;
    }
    button.clear:hover {
      background: #da190b;
    }
    button.set-ticket {
      background: #2196F3;
      min-width: 120px;
    }
    button.set-ticket:hover {
      background: #0b7dda;
    }
    .participants {
      margin-top: 20px;
    }
    .participants h2 {
      font-size: 18px;
      color: #666;
      margin-bottom: 15px;
    }
    .participant {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 16px;
      margin: 8px 0;
      background: #f9f9f9;
      border-radius: 4px;
      border-left: 4px solid #4CAF50;
    }
    .participant-name {
      font-weight: 500;
      color: #333;
    }
    .participant-status {
      color: #4CAF50;
      font-size: 14px;
    }
    .points {
      background: #4CAF50;
      color: white;
      padding: 6px 16px;
      border-radius: 16px;
      font-weight: bold;
      font-size: 16px;
    }
    .empty-state {
      text-align: center;
      padding: 40px;
      color: #999;
    }
    .status-indicator {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background: #4CAF50;
      color: white;
      border-radius: 20px;
      font-size: 14px;
      opacity: 0;
      transition: opacity 0.3s;
      pointer-events: none;
      z-index: 1000;
    }
    .status-indicator.show {
      opacity: 1;
    }
  </style>
</head>
<body>
  <div class="status-indicator" id="statusIndicator">Connected</div>
  
  <div class="container">
    <h1>DataBaes Estimations</h1>

    <div class="ticket-section">
      <div class="ticket-display empty" id="ticketDisplay">
        <span>No ticket set</span>
      </div>
      <div class="ticket-input-group">
        <input type="text" id="ticketTitle" placeholder="Enter ticket title (e.g., USER-123: Add login feature)" />
        <button id="setTicketBtn" class="set-ticket">Set Ticket</button>
      </div>
    </div>

    <div class="input-section">
      <input type="text" id="userName" placeholder="Enter your name" />
      <select id="storyPoints">
        <option value="">Select points</option>
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="5">5</option>
        <option value="8">8</option>
        <option value="13">13</option>
        <option value="21">21</option>
        <option value="?">?</option>
      </select>
      <button id="submitBtn">Vote</button>
    </div>

    <div class="controls">
      <button id="revealBtn" class="reveal">Reveal</button>
      <button id="clearBtn" class="clear">Clear Votes</button>
    </div>

    <div class="participants">
      <h2>Participants</h2>
      <div id="participantsList"></div>
    </div>
  </div>

  <script type="module">
    import { createConsumer } from "@rails/actioncable"
    
    // Wait for page to load
    const votes = {};
    let revealed = false;
    let currentTicket = "";
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;

    function showStatus(message) {
      const indicator = document.getElementById("statusIndicator");
      indicator.textContent = message;
      indicator.classList.add("show");
      setTimeout(() => indicator.classList.remove("show"), 2000);
    }

    // Create Action Cable consumer
    const cable = createConsumer();
      
    cable.subscriptions.create(
      { channel: "EstimationChannel" },
      {
        connected() {
          console.log("Connected to estimation channel");
          showStatus("Connected");
        },
        disconnected() {
          console.log("Disconnected from estimation channel");
        },
        received(data) {
          console.log("Received data:", data);
          
          if (data.action === "submit") {
            votes[data.user_name] = data.points;
            render();
            showStatus(`${data.user_name} voted`);
          } else if (data.action === "reveal") {
            revealed = true;
            render();
            showStatus("All estimates revealed!");
          } else if (data.action === "clear") {
            Object.keys(votes).forEach(key => delete votes[key]);
            revealed = false;
            render();
            showStatus("Votes cleared!");
          } else if (data.action === "set_ticket") {
            currentTicket = data.ticket_title;
            updateTicketDisplay();
            showStatus("Ticket updated");
          }
        }
      }
    );

    function updateTicketDisplay() {
      const display = document.getElementById("ticketDisplay");
      if (currentTicket) {
        display.innerHTML = `<span>${currentTicket}</span>`;
        display.classList.remove("empty");
      } else {
        display.innerHTML = '<span>No ticket set</span>';
        display.classList.add("empty");
      }
    }

    function render() {
      const list = document.getElementById("participantsList");
      
      if (Object.keys(votes).length === 0) {
        list.innerHTML = '<div class="empty-state">No votes yet</div>';
        return;
      }

      list.innerHTML = Object.entries(votes)
        .map(([name, points]) => `
          <div class="participant">
            <span class="participant-name">${name}</span>
            ${revealed ? 
              `<span class="points">${points}</span>` : 
              `<span class="participant-status">âœ“ Voted</span>`
            }
          </div>
        `)
        .join('');
    }

    // Set ticket
    document.getElementById("setTicketBtn").addEventListener("click", async () => {
      const ticketTitle = document.getElementById("ticketTitle").value.trim();

      if (!ticketTitle) {
        alert("Please enter a ticket title");
        return;
      }

      try {
        const response = await fetch("/estimations/set_ticket", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({
            ticket_title: ticketTitle
          })
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Ticket set successfully");
      } catch (error) {
        console.error("Error setting ticket:", error);
        alert("Failed to set ticket. Check console for details.");
      }
    });

    // Submit vote
    document.getElementById("submitBtn").addEventListener("click", async () => {
      const userName = document.getElementById("userName").value.trim();
      const points = document.getElementById("storyPoints").value;

      if (!userName || !points) {
        alert("Please enter your name and select points");
        return;
      }

      try {
        const response = await fetch("/estimations/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({
            user_name: userName,
            points: points
          })
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Vote submitted successfully");
        document.getElementById("storyPoints").value = "";
      } catch (error) {
        console.error("Error submitting vote:", error);
        alert("Failed to submit vote. Check console for details.");
      }
    });

    // Reveal votes
    document.getElementById("revealBtn").addEventListener("click", async () => {
      try {
        const response = await fetch("/estimations/reveal", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          }
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Votes revealed successfully");
      } catch (error) {
        console.error("Error revealing votes:", error);
        alert("Failed to reveal votes. Check console for details.");
      }
    });

    // Clear votes
    document.getElementById("clearBtn").addEventListener("click", async () => {
      try {
        const response = await fetch("/estimations/clear", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          }
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Votes cleared successfully");
      } catch (error) {
        console.error("Error clearing votes:", error);
        alert("Failed to clear votes. Check console for details.");
      }
    });

    // Initial render
    render();
    updateTicketDisplay();
  </script>
</body>
</html>