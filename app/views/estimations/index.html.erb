    function attemptReconnection() {
      if (state.reconnectAttempts >= state.maxReconnectAttempts) {
        console.error("[Reconnection] Max attempts reached");
        showStatus("Connection failed. Please refresh the page.", true, 0);
        return;
      }
      
      state.reconnectAttempts++;
      const delay = Math.min(1000 * Math.pow(2, state.reconnectAttempts - 1), 30000); // Exponential backoff, max 30s
      
      console.log(`[Reconnection] Attempt ${state.reconnectAttempts}/${state.maxReconnectAttempts} in ${delay}ms`);
      updateConnectionStatus(false);
      
      reconnectTimeout = setTimeout(() => {
        setupSubscription();
      }, delay);
    }

    function requestStateSync() {
      if (subscription && state.isConnected) {
        // Rate limiting: prevent rapid sync requests
        const now = Date.now();
        if (state.lastSyncRequest && (now - state.lastSyncRequest) < 2000) {
          console.log("[StateSync] Rate limited - too soon since last request");
          return;
        }
        state.lastSyncRequest = now;
        
        // Track sync request count for debugging
        if (!state.syncRequestCount) state.syncRequestCount = 0;
        state.syncRequestCount++;
        
        // Circuit breaker: if too many sync requests, stop
        if (state.syncRequestCount > 20) {
          console.error(`[StateSync] Circuit breaker triggered - too many sync requests (${state.syncRequestCount})`);
          showStatus("Too many sync requests. Please refresh the page.", true, 10000);
          return;
        }
        
        try {
          console.log(`[StateSync] Requesting state sync... (count: ${state.syncRequestCount})`);
          subscription.perform('request_state_sync');
        } catch (error) {
