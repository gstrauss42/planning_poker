  <script type="module">
    import { createConsumer } from "@rails/actioncable"
    
    // Enhanced global state object with validation
    const state = {
      votes: {},
      revealed: false,
      ticketData: null,
      ticketId: null,
      connectedCount: 0,
      votedCount: 0,
      version: 0,
      lastUpdated: 0,
      sessionHealth: 100,
      connectionId: null,
      isConnected: false,
      lastHeartbeat: 0,
      reconnectAttempts: 0,
      maxReconnectAttempts: 10,
      pendingOperations: new Set()
    };
    
    let subscription = null;
    let heartbeatInterval = null;
    let reconnectTimeout = null;
    let stateValidationInterval = null;
    let healthCheckInterval = null;
    
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
    
    // Enhanced connection status management
    function updateConnectionStatus(connected, text = null) {
      state.isConnected = connected;
      
      if (connected) {
        state.reconnectAttempts = 0; // Reset on successful connection
      }
    }

    function showStatus(message, isError = false, duration = 3000) {
      console.log(`[Status] ${message}`);
      const indicator = document.getElementById("statusIndicator");
      indicator.textContent = message;
      indicator.classList.add("show");
      if (isError) {
        indicator.classList.add("error");
      } else {
        indicator.classList.remove("error");
      }
      setTimeout(() => {
        indicator.classList.remove("show");
        indicator.classList.remove("error");
      }, duration);
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Enhanced state validation and sync
    function validateStateIntegrity(serverState) {
      const issues = [];
      
      if (serverState.version < 0) {
        issues.push("Invalid version number");
      }
      
      if (serverState.votes && typeof serverState.votes !== 'object') {
        issues.push("Invalid votes structure");
      }
      
      if (serverState.revealed && (!serverState.votes || Object.keys(serverState.votes).length === 0)) {
        issues.push("Revealed state without votes");
      }
      
      if (serverState.connected_count < 0) {
        issues.push("Invalid connection count");
      }
      
      return issues;
    }
    
    function syncState(serverState, changeAction = null) {
      console.log(`[Sync] Updating to version ${serverState.version} from ${state.version}, action: ${changeAction}`);
      console.log(`[Sync] Server state:`, serverState);
      
      // Prevent infinite loops - track sync attempts
      if (!state.syncAttempts) state.syncAttempts = 0;
      state.syncAttempts++;
      
      if (state.syncAttempts > 5) {
        console.error(`[Sync] Too many sync attempts (${state.syncAttempts}), stopping to prevent loop`);
        showStatus("Sync loop detected. Please refresh the page.", true, 10000);
        return;
      }
      
      // Validate server state before applying
      const validationIssues = validateStateIntegrity(serverState);
      if (validationIssues.length > 0) {
        console.error(`[Sync] State validation failed: ${validationIssues.join(', ')}`);
        showStatus("State validation failed. Requesting fresh state...", true);
        setTimeout(() => requestStateSync(), 1000); // Add delay to prevent rapid loops
        return;
      }
      
      // Check for version conflicts
      if (state.version > 0 && serverState.version < state.version) {
        console.warn(`[Sync] Version regression detected: server ${serverState.version} < client ${state.version}`);
        showStatus("Version conflict detected. Refreshing state...", true);
        setTimeout(() => requestStateSync(), 1000); // Add delay to prevent rapid loops
        return;
      }
      
      // Reset sync attempts and request count on successful sync
      state.syncAttempts = 0;
      state.syncRequestCount = 0;
      
      // Store previous state for rollback
      const previousState = { ...state };
      
      try {
        // Update all state properties
        state.votes = serverState.votes || {};
        state.revealed = serverState.revealed || false;
        state.ticketData = serverState.ticket_data || null;
        state.ticketId = serverState.ticket_id || null;
        state.connectedCount = serverState.connected_count || 0;
