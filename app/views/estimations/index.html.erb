<!DOCTYPE html>
<html>
<head>
  <title>Planning Poker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background: #f5f5f5;
      padding: 20px;
    }
    .container {
      max-width: 1000px;
      margin: 0 auto;
      background: white;
      padding: 40px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    h1 {
      margin: 0 0 30px 0;
      color: #333;
    }
    .presence-badge {
      font-size: 16px;
      font-weight: 500;
      color: #2196F3;
      background: #e3f2fd;
      padding: 8px 16px;
      border-radius: 20px;
      border: 2px solid #2196F3;
      transition: all 0.3s ease;
    }
    .presence-badge.all-voted {
      color: #4CAF50;
      background: #e8f5e9;
      border-color: #4CAF50;
    }
    .ticket-section {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #eee;
    }
    .jira-input-group {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }
    .ticket-display {
      background: #e3f2fd;
      border-radius: 8px;
      padding: 20px;
      margin-top: 15px;
    }
    .ticket-display.empty {
      text-align: center;
      color: #999;
      font-style: italic;
      padding: 40px;
    }
    .ticket-header {
      display: flex;
      justify-content: space-between;
      align-items: start;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #2196F3;
    }
    .ticket-title {
      font-size: 24px;
      font-weight: 600;
      color: #2196F3;
      flex: 1;
    }
    .ticket-meta {
      display: flex;
      gap: 20px;
      font-size: 14px;
      color: #666;
      margin-top: 8px;
    }
    .ticket-meta-item {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    .ticket-meta-label {
      font-weight: 600;
    }
    .ticket-content {
      margin-top: 20px;
    }
    .ticket-section-block {
      margin-bottom: 25px;
    }
    .ticket-section-block:last-child {
      margin-bottom: 0;
    }
    .section-header {
      font-size: 16px;
      font-weight: 600;
      color: #333;
      margin-bottom: 10px;
      padding-bottom: 5px;
      border-bottom: 1px solid #ddd;
    }
    .section-content {
      color: #555;
      line-height: 1.6;
      font-size: 15px;
    }
    /* Styling for HTML content from JIRA */
    .section-content h1, .section-content h2, .section-content h3,
    .section-content h4, .section-content h5, .section-content h6 {
      margin-top: 16px;
      margin-bottom: 8px;
      font-weight: 600;
      color: #333;
    }
    .section-content h1 { font-size: 24px; }
    .section-content h2 { font-size: 20px; }
    .section-content h3 { font-size: 18px; }
    .section-content h4 { font-size: 16px; }
    .section-content h5 { font-size: 14px; }
    .section-content h6 { font-size: 13px; }
    .section-content p {
      margin-bottom: 12px;
    }
    .section-content ul, .section-content ol {
      margin: 12px 0;
      padding-left: 28px;
    }
    .section-content li {
      margin-bottom: 6px;
    }
    .section-content ul {
      list-style-type: disc;
    }
    .section-content ol {
      list-style-type: decimal;
    }
    .section-content code {
      background: #f5f5f5;
      padding: 2px 6px;
      border-radius: 3px;
      font-family: 'Courier New', monospace;
      font-size: 14px;
    }
    .section-content pre {
      background: #f5f5f5;
      padding: 12px;
      border-radius: 4px;
      overflow-x: auto;
      margin: 12px 0;
    }
    .section-content pre code {
      background: none;
      padding: 0;
    }
    .section-content blockquote {
      border-left: 4px solid #ddd;
      padding-left: 16px;
      margin: 12px 0;
      color: #666;
      font-style: italic;
    }
    .section-content strong {
      font-weight: 600;
    }
    .section-content em {
      font-style: italic;
    }
    .section-content hr {
      border: none;
      border-top: 1px solid #ddd;
      margin: 16px 0;
    }
    .collapsible-section {
      border: 1px solid #ddd;
      border-radius: 6px;
      overflow: hidden;
    }
    .collapsible-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 15px;
      background: #f9f9f9;
      cursor: pointer;
      user-select: none;
      transition: background 0.2s;
    }
    .collapsible-header:hover {
      background: #f0f0f0;
    }
    .collapsible-header .section-header {
      margin: 0;
      padding: 0;
      border: none;
      font-size: 15px;
    }
    .collapse-icon {
      font-size: 18px;
      color: #666;
      transition: transform 0.3s;
    }
    .collapse-icon.expanded {
      transform: rotate(180deg);
    }
    .collapsible-content {
      padding: 15px;
      background: white;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out;
    }
    .collapsible-content.expanded {
      max-height: 2000px;
      transition: max-height 0.5s ease-in;
    }
    .input-section {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }
    input, select, button {
      padding: 12px 16px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
      font-family: inherit;
    }
    input {
      flex: 1;
      min-width: 150px;
    }
    input:focus, select:focus {
      outline: none;
      border-color: #4CAF50;
    }
    select {
      min-width: 120px;
      background: white;
      cursor: pointer;
    }
    button {
      background: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: 500;
      transition: background 0.2s;
    }
    button:hover {
      background: #45a049;
    }
    button:active {
      transform: scale(0.98);
    }
    button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }
    .controls {
      display: flex;
      gap: 10px;
      margin-bottom: 30px;
    }
    .controls button {
      flex: 1;
    }
    button.reveal {
      background: #2196F3;
    }
    button.reveal:hover {
      background: #0b7dda;
    }
    button.clear {
      background: #f44336;
    }
    button.clear:hover {
      background: #da190b;
    }
    button.fetch-jira {
      background: #0052CC;
      min-width: 140px;
    }
    button.fetch-jira:hover {
      background: #0747A6;
    }
    .participants {
      margin-top: 20px;
    }
    .participants h2 {
      font-size: 18px;
      color: #666;
      margin-bottom: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .participant {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 16px;
      margin: 8px 0;
      background: #f9f9f9;
      border-radius: 4px;
      border-left: 4px solid #4CAF50;
    }
    .participant-name {
      font-weight: 500;
      color: #333;
    }
    .participant-status {
      color: #4CAF50;
      font-size: 14px;
    }
    .points {
      background: #4CAF50;
      color: white;
      padding: 6px 16px;
      border-radius: 16px;
      font-weight: bold;
      font-size: 16px;
    }
    .empty-state {
      text-align: center;
      padding: 40px;
      color: #999;
    }
    .status-indicator {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background: #4CAF50;
      color: white;
      border-radius: 20px;
      font-size: 14px;
      opacity: 0;
      transition: opacity 0.3s;
      pointer-events: none;
      z-index: 1000;
    }
    .status-indicator.show {
      opacity: 1;
    }
    .status-indicator.error {
      background: #f44336;
    }
    .loading {
      opacity: 0.6;
      pointer-events: none;
    }
  </style>
</head>
<body>
  <div class="status-indicator" id="statusIndicator">Connected</div>
  
  <div class="container">
    <h1>DataBaes Estimations</h1>

    <div class="ticket-section">
      <div class="jira-input-group">
        <input type="text" id="jiraTicket" placeholder="Enter JIRA ticket key (e.g., PROJ-123) or URL" />
        <button id="fetchJiraBtn" class="fetch-jira">Fetch from JIRA</button>
      </div>
      
      <div class="ticket-display empty" id="ticketDisplay">
        <span>No ticket loaded - Enter a JIRA ticket to begin</span>
      </div>
    </div>

    <div class="input-section">
      <input type="text" id="userName" placeholder="Enter your name" />
      <select id="storyPoints">
        <option value="">Select points</option>
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="5">5</option>
        <option value="8">8</option>
        <option value="13">13</option>
        <option value="21">21</option>
        <option value="?">?</option>
      </select>
      <button id="submitBtn">Vote</button>
    </div>

    <div class="controls">
      <button id="revealBtn" class="reveal">Reveal</button>
      <button id="clearBtn" class="clear">Clear Votes</button>
    </div>

    <div class="participants">
      <h2>
        Participants
        <span class="presence-badge" id="presenceBadge">0/0 voted</span>
      </h2>
      <div id="participantsList"></div>
    </div>
  </div>

  <script type="module">
    import { createConsumer } from "@rails/actioncable"
    
    const votes = {};
    let revealed = false;
    let currentTicketData = null;
    let connectedCount = 0;
    let votedCount = 0;
    let subscription = null;
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;

    function showStatus(message, isError = false) {
      const indicator = document.getElementById("statusIndicator");
      indicator.textContent = message;
      indicator.classList.add("show");
      if (isError) {
        indicator.classList.add("error");
      } else {
        indicator.classList.remove("error");
      }
      setTimeout(() => {
        indicator.classList.remove("show");
        indicator.classList.remove("error");
      }, 3000);
    }

    function updatePresenceBadge() {
      const badge = document.getElementById("presenceBadge");
      badge.textContent = `${votedCount}/${connectedCount} voted`;
      
      // Turn green when everyone has voted
      if (connectedCount > 0 && votedCount === connectedCount) {
        badge.classList.add("all-voted");
      } else {
        badge.classList.remove("all-voted");
      }
    }

    // Helper function to update ticket data and render
    function updateTicketData(ticketData, ticketTitle) {
      console.log("Updating ticket data:", ticketData, ticketTitle);
      currentTicketData = ticketData || null;
      renderTicket();
    }

    // Fetch initial session state on page load
    async function fetchInitialState() {
      try {
        const response = await fetch("/estimations/session_state");
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const state = await response.json();
        console.log("Initial state loaded:", state);
        
        // Load ticket data
        if (state.ticket_data || state.ticket_title) {
          updateTicketData(state.ticket_data, state.ticket_title);
        }
        
        // Load votes
        if (state.votes) {
          Object.keys(votes).forEach(key => delete votes[key]);
          Object.assign(votes, state.votes);
          renderVotes();
        }
        
        // Load revealed state
        if (state.revealed) {
          revealed = true;
          renderVotes();
        }
        
        // Load presence counts
        if (typeof state.connected_count !== 'undefined') {
          connectedCount = state.connected_count;
        }
        if (typeof state.voted_count !== 'undefined') {
          votedCount = state.voted_count;
        }
        updatePresenceBadge();
        
        console.log("Initial state applied successfully");
      } catch (error) {
        console.error("Error fetching initial state:", error);
      }
    }

    // Helper function to update vote data and render
    function updateVote(userName, points) {
      votes[userName] = points;
      renderVotes();
    }

    // Helper function to reveal votes
    function revealVotes() {
      revealed = true;
      renderVotes();
    }

    // Helper function to clear votes
    function clearVotes() {
      Object.keys(votes).forEach(key => delete votes[key]);
      revealed = false;
      renderVotes();
    }

    // Create Action Cable consumer
    const cable = createConsumer();
      
    subscription = cable.subscriptions.create(
      { channel: "EstimationChannel" },
      {
        connected() {
          console.log("Connected to estimation channel");
          showStatus("Connected");
          
          // Start sending heartbeats every 10 seconds
          this.startHeartbeat();
        },
        disconnected() {
          console.log("Disconnected from estimation channel");
          this.stopHeartbeat();
        },
        received(data) {
          console.log("Received data:", data);
          
          if (data.action === "submit") {
            updateVote(data.user_name, data.points);
            showStatus(`${data.user_name} voted`);
          } else if (data.action === "reveal") {
            revealVotes();
            showStatus("All estimates revealed!");
          } else if (data.action === "clear") {
            clearVotes();
            showStatus("Votes cleared!");
          } else if (data.action === "set_ticket") {
            updateTicketData(data.ticket_data, data.ticket_title);
            showStatus("Ticket updated");
          } else if (data.action === "presence_update") {
            connectedCount = data.connected_count;
            votedCount = data.voted_count;
            updatePresenceBadge();
          }
        },
        startHeartbeat() {
          this.heartbeatInterval = setInterval(() => {
            this.perform('heartbeat');
          }, 10000); // Send heartbeat every 10 seconds
        },
        stopHeartbeat() {
          if (this.heartbeatInterval) {
            clearInterval(this.heartbeatInterval);
            this.heartbeatInterval = null;
          }
        }
      }
    );

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function renderTicket() {
      const display = document.getElementById("ticketDisplay");
      
      if (!currentTicketData) {
        display.innerHTML = '<span>No ticket loaded - Enter a JIRA ticket to begin</span>';
        display.classList.add("empty");
        return;
      }

      display.classList.remove("empty");
      
      let html = `
        <div class="ticket-header">
          <div>
            <div class="ticket-title">${escapeHtml(currentTicketData.formatted_title || currentTicketData.key)}</div>
            <div class="ticket-meta">
              ${currentTicketData.status ? `
                <div class="ticket-meta-item">
                  <span class="ticket-meta-label">Status:</span>
                  <span>${escapeHtml(currentTicketData.status)}</span>
                </div>
              ` : ''}
              ${currentTicketData.priority ? `
                <div class="ticket-meta-item">
                  <span class="ticket-meta-label">Priority:</span>
                  <span>${escapeHtml(currentTicketData.priority)}</span>
                </div>
              ` : ''}
              ${currentTicketData.assignee ? `
                <div class="ticket-meta-item">
                  <span class="ticket-meta-label">Assignee:</span>
                  <span>${escapeHtml(currentTicketData.assignee)}</span>
                </div>
              ` : ''}
            </div>
          </div>
        </div>
        <div class="ticket-content">
      `;

      // Description Section - only show if not empty
      if (currentTicketData.description && typeof currentTicketData.description === 'string' && currentTicketData.description.trim()) {
        html += `
          <div class="ticket-section-block">
            <div class="section-header">Description</div>
            <div class="section-content">${currentTicketData.description}</div>
          </div>
        `;
      }

      // Acceptance Criteria Section - only show if not empty
      if (currentTicketData.acceptance_criteria && typeof currentTicketData.acceptance_criteria === 'string' && currentTicketData.acceptance_criteria.trim()) {
        html += `
          <div class="ticket-section-block">
            <div class="section-header">Acceptance Criteria</div>
            <div class="section-content">${currentTicketData.acceptance_criteria}</div>
          </div>
        `;
      }

      // Technical Writeup - Collapsible - only show if not empty
      if (currentTicketData.technical_writeup && typeof currentTicketData.technical_writeup === 'string' && currentTicketData.technical_writeup.trim()) {
        html += `
          <div class="ticket-section-block">
            <div class="collapsible-section">
              <div class="collapsible-header" onclick="toggleTechnicalWriteup()">
                <div class="section-header">Technical Writeup</div>
                <span class="collapse-icon" id="techCollapseIcon">▼</span>
              </div>
              <div class="collapsible-content" id="technicalWriteupContent">
                <div class="section-content">${currentTicketData.technical_writeup}</div>
              </div>
            </div>
          </div>
        `;
      }

      html += '</div>';
      display.innerHTML = html;
    }

    // Make toggleTechnicalWriteup global so onclick can access it
    window.toggleTechnicalWriteup = function() {
      const content = document.getElementById("technicalWriteupContent");
      const icon = document.getElementById("techCollapseIcon");
      
      if (content.classList.contains("expanded")) {
        content.classList.remove("expanded");
        icon.classList.remove("expanded");
      } else {
        content.classList.add("expanded");
        icon.classList.add("expanded");
      }
    };

    function renderVotes() {
      const list = document.getElementById("participantsList");
      
      if (Object.keys(votes).length === 0) {
        list.innerHTML = '<div class="empty-state">No votes yet</div>';
        return;
      }

      list.innerHTML = Object.entries(votes)
        .map(([name, points]) => `
          <div class="participant">
            <span class="participant-name">${escapeHtml(name)}</span>
            ${revealed ? 
              `<span class="points">${escapeHtml(points)}</span>` : 
              `<span class="participant-status">✓ Voted</span>`
            }
          </div>
        `)
        .join('');
    }

    // Fetch from JIRA
    document.getElementById("fetchJiraBtn").addEventListener("click", async () => {
      const jiraInput = document.getElementById("jiraTicket").value.trim();
      const btn = document.getElementById("fetchJiraBtn");

      if (!jiraInput) {
        alert("Please enter a JIRA ticket key or URL");
        return;
      }

      btn.disabled = true;
      btn.textContent = "Fetching...";
      btn.classList.add("loading");

      try {
        const response = await fetch("/estimations/fetch_jira_ticket", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({
            jira_input: jiraInput
          })
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || `HTTP error! status: ${response.status}`);
        }

        console.log("JIRA ticket fetched successfully:", result);
        
        // Immediately update local state (don't wait for ActionCable broadcast)
        updateTicketData(result.ticket, result.ticket.formatted_title);
        
        showStatus("JIRA ticket loaded!");
        document.getElementById("jiraTicket").value = "";
      } catch (error) {
        console.error("Error fetching JIRA ticket:", error);
        showStatus(error.message, true);
      } finally {
        btn.disabled = false;
        btn.textContent = "Fetch from JIRA";
        btn.classList.remove("loading");
      }
    });

    // Submit vote
    document.getElementById("submitBtn").addEventListener("click", async () => {
      const userName = document.getElementById("userName").value.trim();
      const points = document.getElementById("storyPoints").value;

      if (!userName || !points) {
        alert("Please enter your name and select points");
        return;
      }

      try {
        const response = await fetch("/estimations/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          },
          body: JSON.stringify({
            user_name: userName,
            points: points
          })
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Vote submitted successfully");
        
        // Immediately update local state (don't wait for ActionCable broadcast)
        updateVote(userName, points);
        
        document.getElementById("storyPoints").value = "";
      } catch (error) {
        console.error("Error submitting vote:", error);
        alert("Failed to submit vote. Check console for details.");
      }
    });

    // Reveal votes
    document.getElementById("revealBtn").addEventListener("click", async () => {
      try {
        const response = await fetch("/estimations/reveal", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          }
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Votes revealed successfully");
        
        // Immediately update local state (don't wait for ActionCable broadcast)
        revealVotes();
      } catch (error) {
        console.error("Error revealing votes:", error);
        alert("Failed to reveal votes. Check console for details.");
      }
    });

    // Clear votes
    document.getElementById("clearBtn").addEventListener("click", async () => {
      try {
        const response = await fetch("/estimations/clear", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "X-CSRF-Token": csrfToken
          }
        });

        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }

        console.log("Votes cleared successfully");
        
        // Immediately update local state (don't wait for ActionCable broadcast)
        clearVotes();
      } catch (error) {
        console.error("Error clearing votes:", error);
        alert("Failed to clear votes. Check console for details.");
      }
    });

    // Initial render and load state
    renderVotes();
    renderTicket();
    fetchInitialState();
  </script>
</body>
</html>