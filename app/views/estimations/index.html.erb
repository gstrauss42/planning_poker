    function setupSubscription() {
      if (subscription) {
        subscription.unsubscribe();
      }
      
      // Clear any existing timers
      if (heartbeatInterval) clearInterval(heartbeatInterval);
      if (reconnectTimeout) clearTimeout(reconnectTimeout);
      
      subscription = cable.subscriptions.create(
        { channel: "EstimationChannel" },
        {
          connected() {
            console.log("[WebSocket] Connected");
            state.isConnected = true;
            state.lastHeartbeat = Date.now();
            updateConnectionStatus(true);
            showStatus("Connected");
            
            // Start enhanced heartbeat
            startHeartbeat();
            
            // Start periodic state validation
            startStateValidation();
            
            // Start health checks
            startHealthChecks();
          },
          
          disconnected() {
            console.log("[WebSocket] Disconnected");
            state.isConnected = false;
            updateConnectionStatus(false);
            
            // Clear timers
            if (heartbeatInterval) clearInterval(heartbeatInterval);
            if (stateValidationInterval) clearInterval(stateValidationInterval);
            if (healthCheckInterval) clearInterval(healthCheckInterval);
            
            // Attempt reconnection with exponential backoff
            attemptReconnection();
          },
          
          received(data) {
            console.log("[WebSocket] Received:", data);
            
            try {
              if (data.action === "sync_state" || data.action === "sync_state_retry") {
                // Full state sync with validation (handle both primary and retry)
                if (data.action === "sync_state_retry") {
                  console.log(`[WebSocket] Received retry broadcast for ${data.change_action}`);
                }
                syncState(data.state, data.change_action);
                
              } else if (data.action === "presence_update") {
                // Update presence counts
                state.connectedCount = data.connected_count || 0;
                state.votedCount = data.voted_count || 0;
                updatePresenceBadge();
                
              } else if (data.action === "error") {
                // Handle server-side errors
                console.error(`[WebSocket] Server error: ${data.message}`);
                showStatus(data.message, true, 5000);
                
              } else if (data.action === "state_warning") {
                // Handle state integrity warnings
                console.warn(`[WebSocket] State warning: ${data.issues.join(', ')}`);
                showStatus("State integrity issue detected", true, 5000);
                
              } else {
                console.warn(`[WebSocket] Unknown action: ${data.action}`);
              }
              
            } catch (error) {
              console.error(`[WebSocket] Error processing message: ${error.message}`);
              showStatus("Message processing error", true);
            }
          },
          
          rejected() {
            console.error("[WebSocket] Connection rejected");
            showStatus("Connection rejected. Please refresh.", true, 10000);
          }
        }
      );
    }

    function startHeartbeat() {
